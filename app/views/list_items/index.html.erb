<p id="notice"><%= notice %></p>

<h1>List Items</h1>

<table>
  <thead>
    <tr>
      <th>Complete</th>
      <th>Task</th>
      <th>Counter</th>
      <th>Difficultylvl</th>
      <th>Experiencepoints</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @list_items.each do |list_item| %>
      <tr>
        <td><%= list_item.complete %></td>
        <td><%= list_item.task %></td>
        <td><%= list_item.counter %></td>
        <td><%= list_item.difficultyLvl %></td>
        <td><%= list_item.experiencePoints %></td>
        <td><%= link_to 'Show', list_item %></td>
        <td><%= link_to 'Edit', edit_list_item_path(list_item) %></td>
        <td><%= link_to 'Destroy', list_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

