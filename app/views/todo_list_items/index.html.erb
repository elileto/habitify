<p id="notice"><%= notice %></p>

<h1>List Items</h1>

<table>
  <thead>
    <tr>
      <th>Complete</th>
      <th>Task</th>
      <th>Counter</th>
      <th>Difficulty Level</th>
      <th>Experience Points</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todo_list_items.each do |todo_list_item| %>
      <tr>
        <td><%= todo_list_item.complete %></td>
        <td><%= todo_list_item.task %></td>
        <td><%= todo_list_item.counter %></td>
        <td><%= todo_list_item.difficultyLvl %></td>
        <td><%= todo_list_item.experiencePoints %></td>
        <td><%= link_to 'Show', todo_list_item %></td>
        <td><%= link_to 'Edit', edit_todo_list_item_path(todo_list_item) %></td>
        <td><%= link_to 'Destroy', todo_list_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

